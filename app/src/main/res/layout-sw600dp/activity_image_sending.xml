<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
    android:background="@color/black"
        tools:context=".ImageSending"
    android:id="@+id/base_frame">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    >
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/back_button"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_gravity="left"/>
    <ImageView
        android:id="@+id/add_image"
        android:layout_width="@dimen/back_button"
        android:layout_height="match_parent"
        android:src="@drawable/ic_add_24dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"/></FrameLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"/>

    <include
        layout="@layout/bottom_chat"
        android:layout_width="match_parent"

        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="@dimen/chat"
        android:layout_marginLeft="@dimen/chat"
        android:layout_gravity="bottom"
        />
</LinearLayout>
